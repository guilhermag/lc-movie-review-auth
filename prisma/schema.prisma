generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  password String
  score    Int
  role     Role      @default(READER)
  reviews  Review[]
  comments Comment[]

  @@map("users")
}

model Comment {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  author      User     @relation(fields: [authorId], references: [id])
  authorId    Int
  movie       Movie    @relation(references: [id], fields: [movieId])
  description String
  likes       Int
  dislikes    Int
  movieId     Int

  @@map("comments")
}

model Review {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  author     User     @relation(fields: [authorId], references: [id])
  authorId   Int      @unique
  movie      Movie    @relation(references: [id], fields: [movieId])
  movieScore Int
  movieId    Int

  @@map("reviews")
}

model Movie {
  id       Int       @id @default(autoincrement())
  idIMDB   String    @unique
  name     String
  comments Comment[]
  reviews  Review[]

  @@map("movies")
}

enum Role {
  READER
  BASIC
  ADVANCED
  MODERATOR
}
